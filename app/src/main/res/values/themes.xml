<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SkyRewards" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_teal_1</item>
        <item name="colorPrimaryVariant">@color/primary_teal_2</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_teal_3</item>
        <item name="colorSecondaryVariant">@color/secondary_teal_4</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="StatusBar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/statusbar_height</item>
        <item name="android:visibility">gone</item>
    </style>
</resources>